<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pes.enfaixapp.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/imageAbout"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="#fff"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:text="Universitat Politècnica de Catalunya - BarcelonaTech"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Facultat d'Informàtica de Barcelona - FIB"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:text="Projecte d'Enginyeria del Software"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="left|top"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:text="Carlos Àlamo"/>
            <TextView
                android:layout_gravity="left|top"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:text="Àlex Correa"/>
            <TextView
                android:layout_gravity="left|top"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Jordi Guiu"/>
            <TextView
                android:layout_gravity="left|top"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Marc Martí"/>
            <TextView
                android:layout_gravity="left|top"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Eduard Maura"/>
        </GridLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:text="Quatrimestre de Tardor - 2016/17"/>

    </LinearLayout>

</FrameLayout>
