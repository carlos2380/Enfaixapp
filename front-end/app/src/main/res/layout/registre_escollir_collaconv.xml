<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">




    <Button
        android:text="Sobre tú"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/number_one"
        android:layout_marginLeft="15dp"
        android:textSize="18dp"
        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:drawablePadding="5dp"
        android:backgroundTint="@android:color/transparent"/>

    <LinearLayout
        android:layout_margin="20dp"
        android:id="@+id/lnom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text ="Nom*"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:id="@+id/textNom"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="textPersonName"
            android:focusable="true"
            android:textColorHighlight="#ff7eff15"
            android:textColorHint="#222222"
            android:id="@+id/nomInput"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text ="Cognoms*"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:id="@+id/textCognom"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="textPersonName"
            android:focusable="true"
            android:textColorHint="#222222"
            android:id="@+id/cognomInput"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text ="Correu electrònic*"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:id="@+id/textCorreu"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="textPersonName"
            android:focusable="true"
            android:textColorHint="#222222"
            android:id="@+id/correuInput"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text ="Contrasenya*"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:id="@+id/textContrasenya"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:focusable="true"
            android:textColorHint="#222222"
            android:id="@+id/contrasenyaInput"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:inputType="textPassword"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text ="Repeteix la contrasenya*"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:id="@+id/textContrasenya2"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:focusable="true"
            android:textColorHint="#222222"
            android:id="@+id/contrasenyaInput2"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:inputType="textPassword"
            />


    </LinearLayout>

    <Button
        android:text="Escull la teva colla convencional"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/button2"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/number_two"


        />

    <LinearLayout
        android:layout_margin="20dp"
        android:id="@+id/dos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv"
            >
        </ListView>


    </LinearLayout>

    <Button
        android:text="Escull la teva colla universitària"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/button3"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/number_three"


        />

    <LinearLayout
        android:layout_margin="20dp"
        android:id="@+id/tres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvUni"
            >
        </ListView>

    </LinearLayout>

    <Button
        android:text="Segueix a més colles"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:layout_marginLeft="15dp"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/button4"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/number_four"

        />

    <LinearLayout
        android:layout_margin="20dp"
        android:id="@+id/cuatro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvTotes"
            >
        </ListView>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reg"
        android:text="Registrar-me"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textColor="#FFF"
        android:background="@color/colorPrimary"
        />


</LinearLayout>
</ScrollView>