<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/activity_log_in"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoadingActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/logoView"
        android:src="@drawable/logo"
        android:layout_width="200dp"
        android:layout_marginTop="50dp"
        android:layout_height="200dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/usernameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/ic_account_circle_login_24dp"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="#d3d3d3"
        android:layout_marginTop="20dp"
        android:fontFamily="roboto"/>

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_login_lock_24dp"
        android:drawablePadding="10dip"
        android:textColorHint="#d3d3d3"
        android:hint="@string/password"
        android:fontFamily="Roboto" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/log_in"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/buttonText"
        android:layout_gravity="start"
        android:id="@+id/logInButton"
        android:fontFamily="Roboto" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/registrat"
        android:textSize="18sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/buttonText"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:id="@+id/signInButton"
        android:elevation="2dp" />

</LinearLayout>